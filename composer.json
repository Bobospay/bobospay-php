{
  "name": "bobospay/bobospay-php",
  "description": "Php sdk of Bobospay - Online payment solution by credit card and mobile money",
  "keywords": [
    "bobospay",
    "api",
    "payment processing"
  ],
  "homepage": "https://bobospay.com/",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Bobospay\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Corneille",
      "email": "bankolecorneille@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-openssl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "style": "vendor/bin/phpcs --standard=PSR2 -n src tests *.php"
  }
}
